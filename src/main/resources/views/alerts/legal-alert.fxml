<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0">
    <TextArea fx:id="textbox" editable="false" wrapText="true" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets left="10" right="10" top="10"/>
        </VBox.margin>
    </TextArea>
    <HBox alignment="CENTER">
        <Button text="%accept" onAction="#onOkAction">
            <HBox.margin>
                <Insets right="5"/>
            </HBox.margin>
        </Button>
        <Button text="%decline" onAction="#onCancelAction">
            <HBox.margin>
                <Insets left="5"/>
            </HBox.margin>
        </Button>
        <VBox.margin>
            <Insets left="10" right="10" top="10" bottom="10"/>
        </VBox.margin>
    </HBox>
</VBox>
