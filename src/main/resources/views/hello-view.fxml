<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="295.0" prefWidth="274.0" spacing="20.0" stylesheets="@../theme/dark-theme.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musok.musokdbbrowser.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label text="Log In">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Server URL" />
            <TextField fx:id="tfURL" />
            <Label text="User" />
            <TextField fx:id="tfUser" />
            <Label text="Password" />
            <PasswordField fx:id="pfPassword" />
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#onConnectAction" text="Connect" />
   </children>
</VBox>
